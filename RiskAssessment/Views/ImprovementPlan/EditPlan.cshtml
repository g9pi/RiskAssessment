@{

    ViewData["Title"] = "Create Improvement Plan";
}

<div id="app">
    <div class="pt-3">
        <div class="row pt-5">
            <div class="col pt-2">
                <h3 class=" text-white"><i class="fa-solid fa-gears"></i> @ViewData["Title"]</h3>
            </div>
            <div class="col-auto ml-auto ">
                <a class="btn btn-outline-warning text-white" asp-action="@SettingController.ActionRisksControl"
                   asp-controller="@SettingController.Name"><i class="fa fa-arrow-circle-left"></i> Back</a>

            </div>
        </div>
        <div class="row mt-3">
            <div class="col-3">
                <div class="card">
                    <div class="seo-fact sbg1">
                        <div class="p-4 d-flex justify-content-between align-items-center">
                            <div class="seofct-icon"><i class="fa-solid fa-building"></i> Division</div>
                            <h2>CE</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                    <div class="seo-fact sbg2">
                        <div class="p-4 d-flex justify-content-between align-items-center">
                            <div class="seofct-icon"> <i class="fa-solid fa-sitemap"></i> Section</div>
                            <h2>12AB</h2>
                        </div>


                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                    <div class="seo-fact sbg3">
                        <div class="p-4 d-flex justify-content-between align-items-center">
                            <div class="seofct-icon"> <i class="fa-solid fa-diagram-project"></i>Flow</div>
                            <h2>Assembly</h2>
                            @* <i class="ti-panel"></i>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                    <div class="seo-fact sbg4">
                        <div class="p-4 d-flex justify-content-between align-items-center">
                            <div class="seofct-icon"><i class="ti-panel"></i>Process</div>
                            <h2>Trimming</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pt-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h5 class="header-title pt-2">Improvement Plan Detail</h5>
                            </div>
                            <div class="col-auto ml-auto">
                                <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                                <button class="btn btn-success">Submit</button>
                            </div>
                        </div>
                        <hr />
                        <div class="row">                                                     
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="col-form-label">Risk or Opportunity (ความเสี่ยงหรือโอกาส)</label>
                                    <select class="custom-select">
                                        <option selected="selected">Open this select menu</option>
                                        <option value="1">พาเลทล้นในพื้นที่ / จำนวนพาเลทมากเกินไป </option>
                                        <option value="2">สภาพของวัสดุที่ต้องการทิ้ง มีการเปลี่ยนหลังจากประมูลราคาแล้ว / ผู้รับเหมาไม่รับของ / ต้องประมูลราคาใหม่</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label for="example-text-input" class="col-form-label">Action Items (รายละเอียดการดำเนินการ)</label>
                                    <textarea class="form-control" type="text" > </textarea>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label for="example-text-input" class="col-form-label">Resource (ทรัพยากร)</label>
                                    <textarea class="form-control" type="text"> </textarea>
                                </div>
                            </div>
                            <div class="col">
                            
                                    <div class="form-group">
                                        <label for="example-text-input" class="col-form-label">Successful Index (ดัชนีชี้วัดความสำเร็จ)</label>
                                        <textarea class="form-control" type="text"> </textarea>
                                    </div>
                                
                                
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label for="example-date-input" class="col-form-label">Start Date (วันที่เริ่ม)</label>
                                    <input class="form-control" type="date" value="2018-03-05" id="example-date-input">
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label for="example-date-input" class="col-form-label">Finish Date (วันที่เสร็จ)</label>
                                    <input class="form-control" type="date" value="2018-03-05" id="example-date-input">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group">
                                    <label for="example-text-input" class="col-form-label">Action by (ผู้ดำเนินการ)</label>
                                    <input class="form-control" type="text" value="@Context.User.FindFirstValue(AccountClaim.Name)" readonly />
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="example-text-input" class="col-form-label">Remark (หมายเหตุ)</label>
                                    <textarea class="form-control" type="text"> </textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row pt-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5>Follow-up</h5>
                        <hr />
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label for="example-text-input" class="col-form-label">Assign Follow Up to</label>
                                    <select class="custom-select">
                                        <option selected="selected">Open this select menu</option>
                                        <option value="1">Tanapat Tansara</option>
                                        <option value="2">Rattakorn Hongthong</option>
                                       
                                      
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
