@{

    ViewData["Title"] = "Create Risk Assessment";
}
<div id="app">
    <div class="pt-3">
        <div class="row pt-5">
            <div class="col pt-2">
                <h3 class=" text-white"><i class="fa-solid fa-gears"></i> @ViewData["Title"]</h3>
            </div>
            <div class="col-auto ml-auto ">
                <a class="btn btn-outline-warning text-white" asp-action="@SettingController.ActionRisksControl"
                   asp-controller="@SettingController.Name"><i class="fa fa-arrow-circle-left"></i> Back</a>

            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-3">
            <div class="card">
                <div class="seo-fact sbg1">
                    <div class="p-4 d-flex justify-content-between align-items-center">
                        <div class="seofct-icon"><i class="fa-solid fa-building"></i> Division</div>
                        <h2>CE</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card">
                <div class="seo-fact sbg2">
                    <div class="p-4 d-flex justify-content-between align-items-center">
                        <div class="seofct-icon"> <i class="fa-solid fa-sitemap"></i> Section</div>
                        <h2>12AB</h2>
                    </div>


                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card">
                <div class="seo-fact sbg3">
                    <div class="p-4 d-flex justify-content-between align-items-center">
                        <div class="seofct-icon"> <i class="fa-solid fa-diagram-project"></i>Flow</div>
                        <h2>Assembly</h2>
                        @* <i class="ti-panel"></i>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card">
                <div class="seo-fact sbg4">
                    <div class="p-4 d-flex justify-content-between align-items-center">
                        <div class="seofct-icon"><i class="ti-panel"></i>Process</div>
                        <h2>Trimming</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5>
                                Process Risk and Opportunity Assessment
                            </h5>
                        </div>
                        <div class="col-auto ml-auto pr-0">
                            <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                        </div>
                        <div class="col-auto ">
                            <button class="btn btn-success" id="save_btn">Submit</button>
                        </div>
                    </div>

                    <hr />
                    <div class="row">
                        <div class="col-5">
                            <div class="form-group">
                                <label class="col-form-label">Risk or Opportunity (ประเด็นความเสี่ยง หรือโอกาส)</label>
                                <textarea class="form-control" type="text"></textarea>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label class="col-form-label">Items (รายการ)</label>
                                <select class="custom-select">
                                    <option value="" disabled></option>
                                    <option value="I">Input (I)</option>
                                    <option value="O">Output (O)</option>
                                    <option value="M">Man (M)</option>
                                    <option value="W">Method (W)</option>
                                    <option value="W">Control (C)</option>
                                    <option value="W">Machine/Equipment (E)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <b class="text-muted mb-3 mt-2 d-block">Risk/Opportunity:</b>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" id="customRadio4" name="customRadio2" class="custom-control-input" value="R" v-model="Risk.RiskOrOpportunity">
                                <label class="custom-control-label" for="customRadio4">Risk</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" id="customRadio5" name="customRadio2" class="custom-control-input" value="O" v-model="Risk.RiskOrOpportunity">
                                <label class="custom-control-label" for="customRadio5">Opportunity</label>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-auto">
                            <b class="text-muted mb-3 mt-2 d-block">Direct/Indirect:</b>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" id="customRadio6" name="customRadio3" class="custom-control-input">
                                <label class="custom-control-label" for="customRadio6">Direct (ทางตรง)</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" id="customRadio7" name="customRadio3" class="custom-control-input">
                                <label class="custom-control-label" for="customRadio7">Indirect (ทางอ้อม)</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label class="col-form-label">Impact (ผลกระทบ)</label>
                                <input class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label class="col-form-label">Affect to Internal (ผู้รับผลกระทบภายใน)</label>
                                <input class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label class="col-form-label">Affect to External (ผู้รับผลกระทบภายนอก)</label>
                                <input class="form-control" type="text" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row pt-2">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5>การประเมินความเสี่ยงหรือโอกาส (Risk and Opportunity Assessment)</h5>
                    <hr />
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="form-group">
                                <b class="col-form-label">Impact (ผลกระทบ)</b>
                                @* <input class="form-control" type="number" step="1" min="1" max="5" /> *@
                                <br />
                                <div class="custom-control custom-radio ">
                                    <input type="radio" id="q1choic1" name="impact_radio" class="custom-control-input">
                                    <label class="custom-control-label" for="q1choic1">น้อย / Very Low (1)</label>
                                </div>
                                <div class="custom-control custom-radio ">
                                    <input type="radio" id="q1choic2" name="impact_radio" class="custom-control-input">
                                    <label class="custom-control-label" for="q1choic2">น้อยมาก / Low (2)</label>
                                </div>
                                <div class="custom-control custom-radio ">
                                    <input type="radio" id="q1choic3" name="impact_radio" class="custom-control-input">
                                    <label class="custom-control-label" for="q1choic3">ปานกลาง / Moderate (3)</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="q1choic4" name="impact_radio" class="custom-control-input">
                                    <label class="custom-control-label" for="q1choic4">สูง / High (4)</label>
                                </div>
                                <div class="custom-control custom-radio ">
                                    <input type="radio" id="q1choic5" name="impact_radio" class="custom-control-input">
                                    <label class="custom-control-label" for="q1choic5">สูงมาก / Very High (5)</label>
                                </div>
                            </div>
                        </div>
                        <template v-if="Risk.RiskOrOpportunity == 'R'">
                            <div class="col">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th rowspan="2" class="text-center" style="white-space:nowrap">ระดับ <br />ผลกระทบ</th>
                                                <th colspan="3" class="text-center">เกณฑ์ระดับผลกระทบด้านลบ</th>
                                                <th rowspan="2" class="text-center">คะแนน</th>
                                            </tr>
                                            <tr>
                                                <th class="text-center">ผลกระทบภาพรวมต่อการดำเนินงานในกระบวนการ</th>
                                                <th class="text-center">ผลกระทบต่อ KPI หรือ กระบวนการอื่นๆ</th>
                                                <th class="text-center">ผลกระทบต่อลูกค้าหรือผู้ใช้บริการ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-center">น้อยมาก</td>
                                                <td>ส่งผลกระทบน้อยมากหรือไม่ส่งผลกระทบโดยตรง</td>
                                                <td class="text-center">-</td>
                                                <td class="text-center">-</td>
                                                <td class="text-center">1</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">น้อย</td>
                                                <td>ส่งผลกระทบน้อย และควบคุมได้</td>
                                                <td>ส่งผลกระทบทางอ้อมต่อ KPI แต่ไม่กระทบต่อกระบวนการอื่น</td>
                                                <td>ส่งผลกระทบทางอ้อมต่อความพึงพอใจของลูกค้า แต่ควบคุมได้</td>
                                                <td class="text-center">2</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">ปานกลาง</td>
                                                <td>ส่งผลกระทบปานกลาง และควบคุมได้</td>
                                                <td>ส่งผลกระทบทางอ้อมต่อ KPI และกระบวนการอื่น</td>
                                                <td>ส่งผลกระทบทางอ้อมต่อความพึงพอใจของลูกค้า และควบคุมไม่ได้</td>
                                                <td class="text-center">3</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">สูง</td>
                                                <td>ส่งผลกระทบสูง แต่ควบคุมได้ หรือส่งผลกระทบปานกลางแต่ควบคุมไม่ได้</td>
                                                <td>ส่งผลกระทบโดยตรงต่อ KPI แต่ไม่กระทบต่อกระบวนการอื่น</td>
                                                <td>ส่งผลกระทบต่อความพึงพอใจของลูกค้า แต่ควบคุมได้</td>
                                                <td class="text-center">4</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">สูงมาก</td>
                                                <td>ส่งผลกระทบสูง และควบคุมไม่ได้ (หรือควบคุมได้ยาก)</td>
                                                <td>ส่งผลกระทบโดยตรงต่อ KPI และกระทบต่อกระบวนการอื่น</td>
                                                <td>ส่งผลกระทบต่อความพึงพอใจของลูกค้า และควบคุมไม่ได้</td>
                                                <td class="text-center">5</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th rowspan="2" class="text-center" style="white-space:nowrap">
                                                    Impact <br />Level
                                                </th>
                                                <th colspan="3" class="text-center">Criteria (Negative)</th>
                                                <th rowspan="2" class="text-center">Score</th>
                                            </tr>
                                            <tr>
                                                <th class="text-center">
                                                    Impact to overall
                                                    operation of the
                                                    process
                                                </th>
                                                <th class="text-center">
                                                    Impact to KPI or
                                                    other process
                                                </th>
                                                <th class="text-center">
                                                    Impact to customer or
                                                    user
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-center">Very Low</td>
                                                <td>
                                                    The lowest negative
                                                    impact or indirect
                                                    impact.
                                                </td>
                                                <td class="text-center">-</td>
                                                <td class="text-center">-</td>
                                                <td class="text-center">1</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">Low</td>
                                                <td>
                                                    Low negative impact
                                                    and can control.
                                                </td>
                                                <td>
                                                    Indirect negative
                                                    impact to KPI which
                                                    not affect to other
                                                    process.
                                                </td>
                                                <td>
                                                    Indirect negative
                                                    impact to customer
                                                    satisfaction which can
                                                    control.
                                                </td>
                                                <td class="text-center">2</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">Moderate</td>
                                                <td>
                                                    Medium negative
                                                    impact and can
                                                    control.
                                                </td>
                                                <td>
                                                    Indirect negative
                                                    impact to KPI and
                                                    affect to other
                                                    process.
                                                </td>
                                                <td>
                                                    Indirect negative
                                                    impact to customer
                                                    satisfaction and cannot
                                                    control.
                                                </td>
                                                <td class="text-center">3</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">High</td>
                                                <td>
                                                    High negative impact
                                                    which can control or
                                                    medium impact
                                                    which cannot control.
                                                </td>
                                                <td>
                                                    Direct negative
                                                    impact to KPI which
                                                    not affect to other
                                                    process.
                                                </td>
                                                <td>
                                                    Direct negative impact
                                                    to customer
                                                    satisfaction which can
                                                    control.
                                                </td>
                                                <td class="text-center">4</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">Very High</td>
                                                <td>
                                                    High impact and
                                                    cannot control (or
                                                    hard to control)
                                                </td>
                                                <td>
                                                    Direct negative
                                                    impact to KPI and
                                                    affect to other
                                                    process.
                                                </td>
                                                <td>
                                                    Direct negative impact
                                                    to customer
                                                    satisfaction and cannot
                                                    control.
                                                </td>
                                                <td class="text-center">5</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </template>
                        <template v-else-if="Risk.RiskOrOpportunity == 'O'">
                            <div class="col">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th class="text-center">ระดับผลกระทบ</th>
                                                <th class="text-center">เกณฑ์ระดับผลกระทบด้านบวก </th>
                                                <th class="text-center">คะแนน</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-center">น้อยมาก</td>
                                                <td>ส่งผลดีน้อยและควบคุมง่าย หรือ ไม่ส่งผลโดยตรง</td>
                                                <td class="text-center">1</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">น้อย</td>
                                                <td>ส่งผลดีน้อยและควบคุมง่าย หรือ ส่งผลดีปานกลางและควบคุมยาก</td>
                                                <td class="text-center">2</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">ปานกลาง</td>
                                                <td>ส่งผลดีปานกลลางและควบคุมได้</td>
                                                <td class="text-center">3</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">สูง</td>
                                                <td>ส่งผลดีมากและควบคุมไม่ได้ (หรือควบคุมยาก)</td>
                                                <td class="text-center">4</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">สูงมาก</td>
                                                <td>ส่งผลดีมากและควบคุมไม่ได้</td>
                                                <td class="text-center">5</td>
                                            </tr>
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                            <div class="col">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th class="text-center">Impact Level</th>
                                                <th class="text-center">Criteria (Positive) </th>
                                                <th class="text-center">Score</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-center">Very Low</td>
                                                <td>The lowest positive impact or indirect impact.</td>
                                                <td class="text-center">1</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">Low</td>
                                                <td>
                                                    Low positive impact with easy to control or medium positive
                                                    impact with hard to control.
                                                </td>
                                                <td class="text-center">2</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">Moderate</td>
                                                <td>Medium positive impact and can control.</td>
                                                <td class="text-center">3</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">High</td>
                                                <td>Very high positive impact and cannot control (or hard to control)</td>
                                                <td class="text-center">4</td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">Very High</td>
                                                <td>Very high positive impact and can control.</td>
                                                <td class="text-center">5</td>
                                            </tr>
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </template>

                    </div>
                    <hr />
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="form-group">
                                <b class="col-form-label">Likelihood (ความถี่ที่จะเกิดขึ้น)</b>
                                @* <input class="form-control" type="number" step="1" min="1" max="5" /> *@
                                <br />
                                <div class="custom-control custom-radio ">
                                    <input type="radio" id="q2choic1" name="likelihood_radio" class="custom-control-input">
                                    <label class="custom-control-label" for="q2choic1">น้อย / Very Low (1)</label>
                                </div>
                                <div class="custom-control custom-radio ">
                                    <input type="radio" id="q2choic2" name="likelihood_radio" class="custom-control-input">
                                    <label class="custom-control-label" for="q2choic2">น้อยมาก / Low (2)</label>
                                </div>
                                <div class="custom-control custom-radio ">
                                    <input type="radio" id="q2choic3" name="likelihood_radio" class="custom-control-input">
                                    <label class="custom-control-label" for="q2choic3">ปานกลาง / Moderate (3)</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="q2choic4" name="likelihood_radio" class="custom-control-input">
                                    <label class="custom-control-label" for="q2choic4">สูง / High (4)</label>
                                </div>
                                <div class="custom-control custom-radio ">
                                    <input type="radio" id="q2choic5" name="likelihood_radio" class="custom-control-input">
                                    <label class="custom-control-label" for="q2choic5">สูงมาก / Very High (5)</label>
                                </div>
                            </div>
                        </div>

                        <div class="col">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th colspan="2" class="text-center">เกณฑ์ระดับความถี่ที่จะเกิดขึ้น</th>
                                            <th rowspan="2" class="text-center">คะแนน</th>
                                        </tr>
                                        <tr>
                                            <th class="text-center">ความถี่ที่อาจเกิดขึ้น</th>
                                            <th class="text-center">แนวโน้ม/ศักยภาพที่จะเกิดเหตุการณ์ขึ้น</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1 ครั้ง ในระยะเวลา 3 ปี หรือนานกว่านั้น</td>
                                            <td>ไม่เกิดขึ้นแน่นอน</td>
                                            <td class="text-center">1</td>
                                        </tr>
                                        <tr>
                                            <td>1 ครั้ง ต่อปี</td>
                                            <td>ปกติไม่เกิดขึ้น (&lt;3%)</td>
                                            <td class="text-center">2</td>
                                        </tr>
                                        <tr>
                                            <td>1 ครั้ง ต่อ 6 เดือน</td>
                                            <td>เกิดขึ้นเป็นบางครั้ง (3-10%)</td>
                                            <td class="text-center">3</td>
                                        </tr>
                                        <tr>
                                            <td>1 ครั้ง ต่อเดือน</td>
                                            <td>เกิดขึ้นได้กับหลาย ๆ ครั้งที่ดำเนินกระบวนการ (11-50%)</td>
                                            <td class="text-center">4</td>
                                        </tr>
                                        <tr>
                                            <td>มากกว่า 1 ครั้ง ใน 1 เดือน</td>
                                            <td>เกิดขึ้นได้กับทุกครั้งที่ดำเนินกระบวนการ (&gt;50%)</td>
                                            <td class="text-center">5</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th colspan="2" class="text-center">Criteria (Frequency)</th>
                                            <th rowspan="2" class="text-center">Score</th>
                                        </tr>
                                        <tr>
                                            <th class="text-center">Likelihood</th>
                                            <th class="text-center">Trend/Potential to occur</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1 time per 3 year or longer </td>
                                            <td>Absolutely not occur.</td>
                                            <td class="text-center">1</td>
